<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <TextView
        android:id="@+id/track_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="0"
        android:layout_centerVertical="true"
        android:textSize="26sp" />
    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/track_no"
        android:layout_toStartOf="@id/track_update_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/track_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:lines="1"
            android:ellipsize="end"
            android:text="标题标题标题标题标题标题标题标题标题" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/track_play_count"
                android:text="123456"
                android:textSize="12sp"
                android:drawablePadding="4dp"
                android:textColor="#979797"
                android:layout_width="wrap_content"
                android:drawableStart="@mipmap/play_info_icon"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="12sp"
                android:drawablePadding="4dp"
                android:drawableStart="@mipmap/ic_sound"
                android:layout_marginStart="20dp"
                android:id="@+id/track_duration"
                android:text="00:00"
                android:textColor="#979797"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/track_update_date"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018-08" />



</RelativeLayout>